<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:padding="14dp" />

    <RelativeLayout
        android:id="@+id/principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/fondo1">

        <TextView
            android:id="@+id/komunitate_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:text="UGARI"
            android:textColor="?attr/letras1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_below="@+id/komunitate_nick"
            android:id="@+id/komunitate_ongietorri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:text="Ongietorri mezua..."
            android:textColor="?attr/letras1"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/sep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/borde1"
            android:textSize="1sp"
            android:layout_below="@+id/komunitate_ongietorri"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"/>


        <ListView
            android:id="@+id/listview"
            android:layout_below="@+id/sep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/sep2" />

        <TextView
            android:id="@+id/sep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/borde1"
            android:textSize="1sp"
            android:layout_above="@+id/editTextMezua"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"/>

        <EditText
            android:id="@+id/editTextMezua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="@string/mezuaren_textua"
            android:inputType="textPersonName"
            android:layout_toLeftOf="@+id/mezua_bidali"
            android:layout_toStartOf="@+id/mezua_bidali" />

        <Button
            android:id="@+id/mezua_bidali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/bidali" />

    </RelativeLayout>


</RelativeLayout>